 @import "common.styl";

.do{
    display: flex;
    flex-flow: column;
    justify-content:space-between;
    width: 1150px;
    align-items: center;
    text-align: center;
    margin: 0 auto;

    &__header{
      header_style(#606060,  #e1e1e1, 90px, 1px);
      margin-bottom: 60px;
    }
}

.do__block{
  width: 1150px;
  display: flex;
  flex-flow: row;
  justify-content:space-between;
  -webkit-flex-flow: row wrap;
  margin-bottom: 100px;
}
.do__item{
  display: flex;
  flex-flow: column;
  width : 230px;
  height: 280px;
  border: solid 1px #e1e1e1;
  position: relative;
  z-index: 1;


  &:before{
    content: '';
    display: inline-block;
    position: absolute;
    top: -7px;
    left: -7px;
    border: solid 1px #e1e1e1;
    width: 241px;
    height: 280px;
    padding-bottom: 12px;
    z-index: 2;

  }

}

.do__content{
  width : 220px;
  display: flex;
  flex-flow: column;
  justify-content:space-around;
  align-items: center;
  text-align: center;
  margin: auto;

  &__header{
    text-transform: uppercase;
    font-family: 'Raleway', sans-serif;
    font-size: 15px;
    font-weight: bold;
    color: #606060;
    margin-bottom: 10px;
    margin-top: 20px;
  }
  &__text{
    font-family: 'Raleway', sans-serif;
    font-size: 14px;
    font-weight: medium;
    color: #7a7a7a;
    margin-bottom: 10px;
  }
}

