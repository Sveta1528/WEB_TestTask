logo_size = 45px

.navbar__container{
  display: flex;
  justify-content:space-between;
  align-items: center;
  width: 1200px;
  margin: 0 auto;
  min-height: 70px;
  margin-bottom: 30px;

  &__logo img{
      height: logo_size;
      width : logo_size;
  }

  &__nav {
    list-style: none;
    li { display: inline-block; }

    &__item {
      text-decoration: none;
      margin: 15px;
      font-family: 'Raleway', sans-serif;
      font-size: 13px;
      font-weight: bold;
      text-transform: uppercase;
      color: #858585;
      transition: .5s;

       &:hover, &:focus {
        color: #1abb9c;
        cursor: pointer;
        transition: .5s;
      }
    }
}
}

.navbar {
  background: #f5f5f5;
  min-width: 320px;
}

@media (min-width: 1024px) and (max-width: 1440px)
{
    .navbar__container{
      width: 900px;
    }
}

@media (min-width: 767px) and (max-width: 1023px)
{
    .navbar__container{
      width: 760px;
    }
}

@media (min-width: 425px) and (max-width: 767px)
{
    .navbar__container{
      width: 400px;
    }
}

@media (min-width: 320px) and (max-width: 424px)
{
    .navbar__container{
      width: 300px;
    }
}
