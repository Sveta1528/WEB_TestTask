.slider{
  display: flex;
  position: relative;
  overflow: hidden;
  flex-flow: row;
  justify-content:space-between;
  width: 1200px;
  margin: 0 auto;
}

.slider__content {
    position: relative;
    width: calc(100% * 4);
    margin: 0;
    padding: 0;
    transition: 1s;
    li {
        width: calc(100%/4);
        list-style: none;
        display: inline;
        float: left;
    }
}

.slider_btn {
    top: calc(50% - 25px);
    position: absolute;
    padding: 10px;
    background-color: #fff;
    font-family: 'Raleway', sans-serif;
    font-size: 15px;
    font-weight: bold;
    color: #606060;
    &:hover{
      cursor: pointer;
    }
    &__prev{
      left: 20px;
    }
    &__next{
        right: 50px;
    }
}


@media (min-width: 1024px) and (max-width: 1440px)
{
    .slider{
      width: 900px;
      img {max-width: 900px; }

    }
}

@media (min-width: 767px) and (max-width: 1023px)
{
  .slider{
    width: 700px;
    img {max-width: 700px;
         }
  }
}

@media (min-width: 425px) and (max-width: 767px)
{
  .slider{
    display: none;
  }
}

@media (min-width: 320px) and (max-width: 424px)
{
  .slider{
    display: none;
  }
}
