.hello{
    display: flex;
    flex-flow: column;
    justify-content:space-between;
    width: 1200px;
    margin: 0 auto;
    margin-bottom: 50px;

    &__header{
      font-family: 'Raleway', sans-serif;
      font-size: 35px;
      font-weight: bold;
      color: #606060;
      margin-bottom: 10px;
    }
    &__text{
        font-family: 'Raleway', sans-serif;
        font-size: 25px;
        font-weight: lighter;
        font-style: normal;
        color: #606060;
        margin-bottom: 50px;
    }
}

.slider{
  display: flex;
  flex-flow: row;
  justify-content:space-between;
  width: 1200px;
  margin: 0 auto;
  img {max-width: 1200px; }

  &__btn{
    flex-flow: column;
    align-items: center;
    margin: auto;
    font-family: 'Raleway', sans-serif;
    font-size: 20px;
    font-weight: bold;
    font-style: normal;
    color: #606060;
    background-color: #fdfdfd;
    width: 25px;
    height: 30px;
    padding-left: 10px;
    padding-top: 5px;
  }

  &__prev{
    margin-left: -1150px
  }

  &__next{
    margin-left: 1030px
  }
}

@media (min-width: 1024px) and (max-width: 1440px)
{
    .slider{
      width: 1000px;
      img {max-width: 900px; }

        &__prev{
          margin-left: -880px
        }

        &__next{
          margin-left: 680px
        }

    }
      .hello{
        width: 900px;

            &__header{
              font-size: 25px;
            }
            &__text{
                font-size: 17px;
            }
      }
}

@media (min-width: 767px) and (max-width: 1023px)
{
  .slider{
    width: 760px;
    img {max-width: 700px;
         max-height: 400px; }

      &__prev{
        margin-left: -670px
      }

      &__next{
        margin-left: 500px
      }

  }
  .hello{
    width: 760px;

        &__header{
          font-size: 25px;
        }
        &__text{
            font-size: 17px;
        }
  }
}

@media (min-width: 425px) and (max-width: 767px)
{
  .slider{
    display: none;

  }
  .hello{
    width: 400px;
    margin-bottom: 0px;

        &__header{
          font-size: 20px;
        }
        &__text{
            font-size: 15px;
        }
  }
}

@media (min-width: 320px) and (max-width: 424px)
{
  .slider{
    display: none;

  }
  .hello{
    width: 300px;
    margin-bottom: 0px;

        &__header{
          font-size: 20px;
        }
        &__text{
            font-size: 15px;
        }
  }
}
