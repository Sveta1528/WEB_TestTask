.hello{
    display: flex;
    flex-flow: column;
    justify-content:space-between;
    width: 1200px;
    margin: 0 auto;
    margin-bottom: 50px;
    margin-top: 100px;

    &__header{
      font-family: 'Raleway', sans-serif;
      font-size: 35px;
      font-weight: bold;
      color: #606060;
      margin-bottom: 10px;
    }
    &__text{
        font-family: 'Raleway', sans-serif;
        font-size: 25px;
        font-weight: lighter;
        font-style: normal;
        color: #606060;
        margin-bottom: 50px;
    }
}




@media (min-width: 1024px) and (max-width: 1440px)
{
      .hello{
        width: 900px;

            &__header{
              font-size: 25px;
            }
            &__text{
                font-size: 17px;
            }
      }
}

@media (min-width: 767px) and (max-width: 1023px)
{
  .hello{
    width: 700px;

        &__header{
          font-size: 25px;
        }
        &__text{
            font-size: 17px;
        }
  }
}

@media (min-width: 425px) and (max-width: 767px)
{
  .slider{
    display: none;

  }
  .hello{
    width: 400px;
    margin-bottom: 0px;
    margin-top: 20px;

        &__header{
          font-size: 20px;
        }
        &__text{
            font-size: 15px;
        }
  }
}

@media (min-width: 320px) and (max-width: 424px)
{
  .slider{
    display: none;

  }
  .hello{
    width: 300px;
    margin-bottom: 0px;
    margin-top: 20px;

        &__header{
          font-size: 20px;
        }
        &__text{
            font-size: 15px;
        }
  }
}
